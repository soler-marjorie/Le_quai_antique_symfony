{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
<div class="container example-wrapper">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>S'enregistrer !</h1>


    <form action="{{ path('register') }}" method="post">
        <input type="email" name="_username" value="{{ user.email }}" placeholder="Email de votre compte">
        <input type="password" name="_password" placeholder="Mot de passe">
        <input type="password" name="_password" placeholder="Confirmer le mot de passe">
        <button type="submit" class="btn btn-outline-primary">Cr√©er son compte</button>
    </form>

{% endblock %}

