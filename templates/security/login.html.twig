{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}



{% block main %}
<div class="container example-wrapper">
    <h1>Se connecter !</h1>

    {% if error %}
        <p class="text-danger">{{ error.messageKey }}</p>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <input type="text" name="_username" value="{{ lastUsername }}" placeholder="Email de votre compte">
        <input type="password" name="_password" placeholder="Mot de passe">
        <button type="submit" class="btn btn-outline-primary">Connexion</button>
    </form>

    <div>
        <ul>
            <li>
                <a href="{{ path('app_register') }}" class="">Créer un compte</a>
            </li>
            <li>
                <a href="{{ path('app_forgot_password_request') }}" class="">Mot de passe oublié</a>
            </li>
        </ul>
    </div>
    
</div>

{% endblock %}

